<div class="p-4 mx-auto mt-10 max-w-lg bg-white border rounded-md">
  <div class="md:flex md:items-center md:justify-between">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        Photos
      </h2>
    </div>
    <div class="flex mt-4 md:mt-0 md:ml-4">
      <%= link_to 'New Photo', new_photo_path, class: "inline-flex items-center py-2 px-4 text-sm font-medium text-gray-700 bg-white rounded-md border border-gray-300 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

    </div>

  </div>
  <p id="notice" class="flex mt-4 text-green-500"><%= notice %></p>
  <ul class="mt-10 space-y-6">
    <% @photos.each do |photo| %>
    <% if photo.image.attached? %>
    <li class="p-2 bg-indigo-50 rounded-lg shadow">
      <%= image_tag photo.image, class: "rounded-sm", height: 300 %>
      <span class="text-xs px-1">blob key &mdash; <%= photo.image.key %></span>
    </li>
    <% end %>
    <% end %>
  </ul>
</div>
